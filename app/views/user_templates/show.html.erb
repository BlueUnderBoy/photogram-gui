<html>
  <head>
      <title>Target: Photogram GUI</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>

    <h1><%= @user.username %></h1>

    <dl>
      <dt>
        ID
      </dt>
      <dd>
        <%= @user.id %>
      </dd>

      <dt>
        Edit user
      </dt>
      <dd>
        <form action="/update_user/<%= @user.id %>" method="post">
          <label for="username">Username</label>
          <input id="username" type="text" name="username" value="<%= @user.username %>">

          <button>Update user</button>
        </form>
      </dd>
    </dl>

    <h2>Own photos (0)</h2>

    <table border="1">
      <tbody>
        <tr>
          <th>
            Image
          </th>

          <th>
            Owner
          </th>

          <th>
            Caption
          </th>

          <th>
            Posted
          </th>

          <th>
          </th>
        </tr>
        <% @user_images.each do |a_i|%>
        <tr>
          <td>
            <a href="<%= a_i.image %>"></a>
          </td>
          <td>
            <%= @user.username %>
          </td>
          <td>
            <%= a_i.caption %>
          </td>
          <td>
            <%= a_i.created_at %>
          </td>
          <td>
            <a href="/photos/<%= a_i.id %>">Show details</a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </body> 
</html>
