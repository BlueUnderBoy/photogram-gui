<html><head>
    <title>Target: Photogram GUI</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>

    <h1>List of photos</h1>

<form action="/insert_photo_record" method="post">
  <label for="image">Image</label>
  <input id="image" type="text" name="image" placeholder="Enter a URL for the image...">

  <label for="caption">Caption</label>
  <textarea id="caption" name="caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="id">Owner ID</label>
  <input id="id" type="text" name="id" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tbody>
    <tr>
      <th>
        Image
      </th>

      <th>
        Caption
      </th>

      <th>
        Owner
      </th>

      <th>
        Posted
      </th>

      <td>
      </td>
    </tr>

    <% @photos.each do |a_photo|%>
    <tr>
      <td>
        <img src="<%= a_photo.image %>" height="300px">
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
        <%= a_photo.poster.username %>
      </td>

      <td>
        <%= a_photo.created_at %>
      </td>

      <td>
        <a href="/photos/<%= a_photo.id %>">
          Show details
        </a>
      </td>
    </tr>
    <% end %>
</body>
</html>
